{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/test/bscilN/Tests.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch-test",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "test",
        "--project",
        "${workspaceFolder}/test/bscilN/Tests.csproj"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}
